journal = {Journal of Synchrotron Radiation},
keywords = {anisotropic scattering,molecular structure,orientational selection,supporting information,this article has,time-resolved,ultrafast,xfel},
pages = {306--315},
title = {{Anisotropy enhanced X-ray scattering from solvated transition metal complexes research papers}},
