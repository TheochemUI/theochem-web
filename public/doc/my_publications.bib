file = {:Users/giale/Library/Application Support/Mendeley Desktop/Downloaded/Levi et al. - 2020 - On how mild oxidation affects the structure of carbons Comparative analysis by different techniques.pdf:pdf},
issn = {2666352X},
journal = {Applications in Energy and Combustion Science},
month = {dec},
pages = {100006},
publisher = {Elsevier BV},
title = {{On how mild oxidation affects the structure of carbons: Comparative analysis by different techniques}},
url = {https://www.sciencedirect.com/science/article/pii/S2666352X20300066},
volume = {1-4},
year = {2020}
}
